			},
			{
				"id":"vol_cur",
				"type":"text",
				"element": "input",
				"label": "Current Volume value",
				"doc": "Current volume value for your system.",
				"value": "10"
			},
			{
				"id": "map_to_100",
				"element": "switch",
				"label": "Map volume range to percentage",
				"doc": "Map volume range to percentage",
