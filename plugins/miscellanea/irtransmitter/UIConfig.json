		"id": "section_remoteSettings",
		"element": "section",
		"label": "Remote settings",
		"description": "Remote settings",
		"icon": "fa-cog",
    "onSave": {
      "type": "controller",
      "endpoint": "miscellanea/irtransmitter",
      "method": "updateRemoteSettings"
    },
		"saveButton": {
			"label": "TRANSLATE.SAVE",
			"data": [
				"gpio_pin",
				"remotename"
			]
		},
