			"label": "Refresh Station list",
			"data": [
				"stationsStatus"
			]
        },
		"content": [
			{
			  "id":"stationsTotal",
			  "type": "text",
			  "element": "output",
			  "label": "Number of stations: ",
			  "value": "0"
			},
			{
			  "id":"stationsPremium",
			  "type": "text",
			  "element": "output",
			  "label": "included premium stations: ",
			  "value": "0"
			},
			{
			  "id":"brandsTotal",
			  "type": "text",
			  "element": "output",
